<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="nav">
  <h1>Sham timeline</h1>
  <div>
    <%= button_to new_picture_path, :class => "new-sham-button", :method => :get do %>
      Upload new sham!
    <% end %>
  </div>
</div>

<ul>
  <% @pictures.each do |picture| %>
    <div class="container">
      <%= link_to picture_path(picture.id) do %>
        <div class="pic"><%= image_tag picture.image.variant(resize: "150x150") if picture.image.attached? %></div>
        <div class="pic-title"><%= picture.title %></div>
        <div class="comment-like-container">
          <div class="pic-comments"><% if picture.comments.length == 1 %>
            <%= picture.comments.length%> comment
          <% else %>
            <%= picture.comments.length%> comments
          <% end %></div>
          <div>
            <button class="like-button">👍</button>0
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</ul>